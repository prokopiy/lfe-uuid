{erl_opts, [debug_info]}.

{deps, [
  {lfe, {git, "http://github.com/rvirding/lfe", {branch, "develop"}}}
]}.

{plugins, [
  {rebar3_lfe,
    {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "release/0.3.x"}}}
]}.

{profiles, [
  {test, [
    {deps, [
      {ltest, {git, "https://github.com/lfex/ltest.git"}}
    ]},
    {src_dirs, ["src", "test"]}
  ]}
]}.

{provider_hooks, [
  {pre, [{compile, {lfe, compile}}]}
  ]}.